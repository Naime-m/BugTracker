@page
@using BugTracker.Models;
@model BugTracker.Pages.Bugs.EditModel
@{
}

<div class="mt-3">
    <form method="post">

        <div class="form-group">
            <label asp-for="Bug.Name">Name</label>
            <input asp-for="Bug.Name" class="form-control" />
            <span asp-validation-for="Bug.Name" class="text text-danger"></span>
        </div>

        <div>
            <label class="mt-1" asp-for="Bug.Description">Description</label>
            <input asp-for="Bug.Description" class="form-control" />
            <span asp-validation-for="Bug.Description" class="text text-danger"></span>
        </div>

        <div>
            <label class="mt-1" asp-for="Bug.Author">Author</label>
            <input asp-for="Bug.Author" class="form-control" />
        </div>

        <div>
            <label class="mt-1" asp-for="Bug.BugType">Type</label>
            <select asp-for="Bug.BugType" class="form-select" asp-items="Html.GetEnumSelectList<BugType>()"></select>
        </div>
        <div>
            <label class="mt-1" asp-for="Bug.Status">Type</label>
            <select asp-for="Bug.BugType" class="form-select" asp-items="Html.GetEnumSelectList<Status>()"></select>
        </div>
        <button class="btn btn-success mt-2">Add Bug</button>
    </form>
</div>